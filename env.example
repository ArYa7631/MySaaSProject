# MySaaSProject Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Environment
NODE_ENV=development
RAILS_ENV=development

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/mysaasproject_development
POSTGRES_DB=mysaasproject_development
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# Rails Secret Key Base (generate with: rails secret)
SECRET_KEY_BASE=your_rails_secret_key_base_here

# JWT Secret Key (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your_jwt_secret_key_here

# JWT Expiration (in seconds)
JWT_EXPIRATION=86400

# Password Reset Token Expiration (in hours)
PASSWORD_RESET_EXPIRATION=24

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_DOMAIN=localhost

# Email From Address
MAILER_FROM_ADDRESS=noreply@example.com
MAILER_FROM_NAME=MySaaSProject

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Storage Configuration (local, s3, etc.)
STORAGE_PROVIDER=local
STORAGE_PATH=./storage

# AWS S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET=your-bucket-name

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Google Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Sentry Error Tracking
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# Stripe Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# SendGrid Email Service
SENDGRID_API_KEY=your_sendgrid_api_key

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# RATE LIMITING
# =============================================================================

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level
LOG_LEVEL=info

# Log File Path
LOG_FILE_PATH=./logs/application.log

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================

# SSL Certificate Paths (for production)
SSL_CERTIFICATE_PATH=/etc/ssl/certs/example.com.crt
SSL_PRIVATE_KEY_PATH=/etc/ssl/private/example.com.key

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker Registry
DOCKER_REGISTRY=ghcr.io
DOCKER_USERNAME=your_github_username
DOCKER_PASSWORD=your_github_token

# Docker Image Names
DOCKER_IMAGE_NAME=mysaasproject

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Settings
DEBUG=true
SHOW_ERRORS=true
ENABLE_HOT_RELOAD=true

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Production Settings (override these in production)
# NODE_ENV=production
# RAILS_ENV=production
# DEBUG=false
# SHOW_ERRORS=false
# ENABLE_HOT_RELOAD=false

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup Settings
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================

# Webhook URLs (comma-separated)
WEBHOOK_URLS=https://example.com/webhooks

# Webhook Secret
WEBHOOK_SECRET=your_webhook_secret

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_FILE_UPLOAD=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_SOCIAL_LOGIN=false

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Cache Configuration
CACHE_TTL=3600
CACHE_PREFIX=mysaasproject

# Database Connection Pool
DB_POOL_SIZE=5
DB_POOL_TIMEOUT=5

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Security Headers
ENABLE_HSTS=true
ENABLE_CSP=true
ENABLE_XSS_PROTECTION=true

# Session Configuration
SESSION_SECRET=your_session_secret
SESSION_EXPIRATION=86400

# =============================================================================
# MONITORING & HEALTH CHECKS
# =============================================================================

# Health Check Configuration
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_TIMEOUT=30

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API Version
API_VERSION=v1

# API Rate Limiting
API_RATE_LIMIT=1000
API_RATE_LIMIT_WINDOW=3600

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Frontend Build Configuration
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_DEBUG=false

# Frontend Feature Flags
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=false
